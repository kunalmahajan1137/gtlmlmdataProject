<script>
// Scroll event listener
window.addEventListener("scroll", () => {
const cards = document.querySelectorAll(".card");
const triggerPoint = window.innerHeight * 0.8; // Trigger when 80% in viewport

cards.forEach((card, index) => {
    const cardTop = card.getBoundingClientRect().top;

    if (cardTop < triggerPoint && cardTop > 0) {
        // Alternate left/right based on index
        if (index % 2 === 0) {
            card.classList.add("scroll-left");
            card.classList.remove("reset");
        } else {
            card.classList.add("scroll-right");
            card.classList.remove("reset");
        }
    } else {
        // Reset animation when the card is out of the viewport
        card.classList.remove("scroll-left", "scroll-right");
        card.classList.add("reset");
    }
});
});



</script>            